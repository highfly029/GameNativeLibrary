{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Complie",
        "type": "shell",
        "command": "g++",
        "args": [
            "-std=c++17",
            "-stdlib=libc++",
            "main.cpp",
            "TempObstacle.cpp",
            "SoloMesh.cpp",
            "DetourAlloc.cpp",
            "DetourAssert.cpp",
            "DetourCommon.cpp",
            "DetourNavMesh.cpp",
            "DetourNavMeshBuilder.cpp",
            "DetourNavMeshQuery.cpp",
            "DetourNode.cpp",
            "DetourTileCache.cpp",
            "DetourTileCacheBuilder.cpp",
            "ChunkyTriMesh.cpp",
            "MeshLoaderObj.cpp",
            "-o",
            "${fileBasenameNoExtension}",
            "fastlz.o",
            "--debug"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "dependsOn":["ComplieC"]
      },
      {
        "label": "ComplieC",
        "type": "shell",
        "command": "gcc",
        "args": [
            "-c",
            "fastlz.c",
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }